{
  "compilerOptions": {
    "baseUrl": "./src",
    // Allow use imports/exports of the CommonJS
    "module": "commonjs",
    // Allow use export default
    "esModuleInterop": true,
    // Defines which version of JavaScript the final project build will generate.
    // NodeJS version 14 or higher already supports 100% ES2020.
    "target": "ES2017",
    // Activate the use of decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
